<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_log"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="208dp"
            app:layout_constraintBottom_toTopOf="@+id/dialog_window"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/dialog_window"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_log"
            app:srcCompat="@drawable/ic_child_care_black_24dp" />

        <LinearLayout
            android:id="@+id/dialog_window"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/sent_msg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:background="@drawable/button_background">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="챗봇이름"
                    android:textSize="25sp"
                    android:textColor="@color/colorLightPink"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/colorBlack"
                    android:text="대화내용"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="5dp"
                    android:gravity="bottom"
                    android:layout_gravity="right"/>


        </LinearLayout>


        <TextView
            android:id="@+id/sent_msg"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="25dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_window" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="3dp">

        <Button
            android:id="@+id/content_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_expand_less_black_24dp"/>

        <EditText
            android:id="@+id/edit_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="메시지 입력" />

        <Button
            android:id="@+id/msgsend_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_message_black_24dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>



    </LinearLayout>

</LinearLayout>