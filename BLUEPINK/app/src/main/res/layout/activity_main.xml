<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


            <ImageView
                android:id="@+id/chatbot_image"
                android:layout_width="263dp"
                android:layout_height="335dp"
                app:srcCompat="@drawable/cat1_normal"
                tools:layout_editor_absoluteX="74dp"
                tools:layout_editor_absoluteY="16dp"
                android:layout_marginTop="15dp"/>

    <LinearLayout
            android:id="@+id/tempView"
            android:layout_width="355dp"
            android:layout_height="220dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/dialog_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:text="                      " />

            </LinearLayout>


        </ScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/sent_msg"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:cursorVisible="false"
            android:gravity="center"
            android:text="TextView"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="593dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="3dp">

        <Button
            android:id="@+id/content_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_expand_less_black_24dp"/>

        <EditText
            android:id="@+id/edit_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="메시지 입력" />

        <Button
            android:id="@+id/msgsend_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_message_black_24dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>



    </LinearLayout>

</LinearLayout>